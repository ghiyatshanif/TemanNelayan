<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.ghiyats.volleyexample.Fragment.AccountFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="ACCOUNT SETTING"
            android:textAllCaps="true"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/accThumbnail"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/account_placeholder" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Ranger"
                    android:textColor="@color/secondary_text_default_material_light"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="my name"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ID Ranger"
                    android:textColor="@color/secondary_text_default_material_light"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/account_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3302"
                    android:textAllCaps="true"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Change password"
            android:textAllCaps="true"
            android:textColor="@color/secondary_text_default_material_light"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/oldPassTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingTop="20dp"
            android:text="Old password"
            android:textColor="@color/secondary_text_default_material_light"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/oldPass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/hint_password"
            android:textColorHint="@color/secondary_text_disabled_material_light"
            android:inputType="textPassword"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/newPassTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="New password"
            android:textColor="@color/secondary_text_default_material_light"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/newPass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColorHint="@color/secondary_text_disabled_material_light"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/newPassConfirmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Confirm new password"
            android:textColor="@color/secondary_text_default_material_light"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/newPassConfirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/secondary_text_disabled_material_light"
            android:layout_margin="10dp"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true" />


            <Button
                android:id="@+id/btnChangePass"
                android:layout_margin="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/actionbar_color"
                android:layout_centerHorizontal="true"
                android:text="Change Password  " />
    </LinearLayout>
</ScrollView>
