<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ghiyats.fish.temannelayan.Activity.DetailActivity">

    <TextView
        android:id="@+id/namaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAMA LOKASI"
        android:textAllCaps="true"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/locationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaTitle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="-6.312321, 108.34434"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnOpenMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/namaTitle"
        android:layout_marginTop="17dp"
        android:clickable="true"
        android:onClick="openMap"
        android:text="VIEW IN MAP"
        android:textColor="@color/actionbar_color"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jmlTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationTitle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="73"
        android:textSize="@dimen/abc_text_size_display_4_material" />

    <TextView
        android:id="@+id/jmlSuffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/jmlTitle"
        android:text="butir telur"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <TextView
        android:id="@+id/jenisTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jmlSuffix"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/jmlTitle"
        android:text="Penyu Hijau"
        android:textAllCaps="true"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/konservasiSuffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jmlTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/abc_text_size_small_material"
        android:text="dibawah perlindungan :" />

    <TextView
        android:id="@+id/konservasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/konservasiSuffix"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:text="Nama Konservasi"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <Button
        android:id="@+id/btnOpenDropbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/konservasi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/actionbar_color"
        android:onClick="openDropbox"
        android:text="Buka Hasil Monitoring"
        android:textColor="@color/primary_text_default_material_dark" />

</RelativeLayout>
