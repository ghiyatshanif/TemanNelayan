<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ghiyats.fish.temannelayan.Activity.DetailActivity">

    <TextView
        android:id="@+id/namaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAMA LOKASI"
        android:textAllCaps="true"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/locationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaTitle"
        android:layout_marginTop="20dp"
        android:text="-6.312321, 108.34434"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/btnOpenMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/namaTitle"
        android:layout_marginTop="20dp"
        android:text="view in Map"
        android:clickable="true"
        android:textStyle="bold"
        android:onClick="openMap"
        android:textAllCaps="true"
        android:textColor="@color/actionbar_color"
        android:textSize="@dimen/abc_text_size_medium_material"/>

    <TextView
        android:id="@+id/jmlTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationTitle"
        android:layout_marginTop="20dp"
        android:text="73"
        android:textSize="@dimen/abc_text_size_display_4_material"/>

    <TextView
        android:id="@+id/jmlSuffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationTitle"
        android:layout_toRightOf="@id/jmlTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:text="butir telur"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <TextView
        android:id="@+id/jenisTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jmlSuffix"
        android:layout_toRightOf="@id/jmlTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="Penyu Hijau"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <Button
        android:id="@+id/btnOpenDropbox"
        android:layout_margin="20dp"
        android:layout_width="fill_parent"
        android:layout_below="@id/jmlTitle"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text_default_material_dark"
        android:text="Buka Hasil Monitoring"
        android:onClick="openDropbox"
        android:background="@color/actionbar_color"/>

</RelativeLayout>
