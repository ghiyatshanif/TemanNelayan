<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/actionbar_color_darker</item>
        <item name="colorPrimary">@color/actionbar_color</item>
        <item name="colorAccent">@color/actionbar_color_lighter</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_color</item>

        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_color</item>
    </style>


    <style name="CroutonText">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold|italic</item>
    </style>


    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="colorPrimary">@color/actionbar_color</item>
        <item name="colorPrimaryDark">@color/actionbar_color_darker</item>
        <item name="colorAccent">@color/actionbar_color_lighter</item>
        <item name="rippleBackport">true</item>
        <item name="singleAccount">true</item>
        <item name="learningPattern">false</item>
        <item name="multipaneSupport">true</item>
        <item name="drawerType">@integer/DRAWERTYPE_ACCOUNTS</item>
    </style>


    <style name="MyAlertDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/actionbar_color</item>
    </style>

    <style name="MyButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="colorPrimary">@color/actionbar_color_darker</item>
        <item name="android:background">@color/actionbar_color_darker</item>
    </style>

</resources>
